<!DOCTYPE html>
<html>
  <head>
    <title>Evercard</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="https://s3.amazonaws.com/evercard4/assets/favico/evercard_ico.png">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link href='https://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    
    <meta name="google-site-verification" content="fSbIY8PBJMqMxbMZrZtjz6i07sDrkPJrVON7KLZW0_c" />
  </head>

  <body>

    <%= render 'layouts/navbar' %>

    <%= yield %>

    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/bootstrap.min.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/classie.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/cbpAnimatedHeader.min.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/owl.carousel.min.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/scrollReveal.js"></script>

    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/jquery.nav.js" defer="defer"></script>

    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/imagesloaded.pkgd.min.js" defer="defer"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/isotope.min.js" defer="defer"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/jquery.magnific-popup.min.js" defer="defer"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/jqBootstrapValidation.js" defer="defer"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/less-1.6.1.min.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/modernizr.custom.js"></script>
    <script src="https://s3.amazonaws.com/evercard-dev/assets/javascripts/jquery.simple-text-rotator.js"></script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-70794782-1', 'auto');
      ga('send', 'pageview');

    </script>
    
    <script>
      $(document).ready(function(){
        isotope();
        signupOverlay();
        loginOverlay();

        $('.theme-option').click(function(event){
            event.preventDefault();
            less.modifyVars({
                '@theme-cta': $(this).attr('data-theme')
            });

            less.refreshStyles();
        });

      });
    </script>

    <script>
      $(".rotate").textrotator({
          animation: "dissolve",
          separator: ",",
      speed: 2500
      });
    </script>

    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  </body>
</html>